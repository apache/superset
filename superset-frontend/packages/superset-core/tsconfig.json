{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "strict": true,
    "rootDir": "src",
    "jsx": "preserve",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2020",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts*"],
  "exclude": ["lib"]
}
