{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "lib",
    "outDir": "lib",
    "strict": true,
    "rootDir": "src",
    "jsx": "preserve",
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*.ts*", "src/**/*.d.ts"],
  "exclude": ["lib", "test"]
}
