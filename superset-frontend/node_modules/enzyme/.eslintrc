{
  "extends": "airbnb",
  "root": true,
  "env": {
    "node": true,
    "mocha": true
  },
  "rules": {
    "id-length": 0,
    "new-cap": [2, { "capIsNewExceptions": ["AND"] }],
    "react/jsx-pascal-case": [2, { "allowAllCaps": true }],
    "react/no-find-dom-node": 1,
    "import/first": 0,
    "no-underscore-dangle": [2, {
      "allowAfterThis": true,
      "allow": [
        "_context",
        "_currentElement",
        "_instance",
        "_reactInternalComponent",
        "_reactInternalInstance",
        "_renderedChildren",
        "_renderedComponent",
        "_renderedNodeType",
        "_state",
        "_store",
        "_stringText",
      ],
    }],
  }
}
