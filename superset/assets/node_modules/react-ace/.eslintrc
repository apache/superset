{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "globals": {
      "ENVIRONMENT": true,
      "STANDALONE": true,
      "it": true,
      "describe": true,
      "xdescribe": true,
      "xit": true,
      "before": true,
      "beforeEach": true,
      "after": true,
      "afterEach": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-console": [
          "error",
          {
            "allow": [
              "warn",
              "error"
            ]
          }
        ]
    }
}
