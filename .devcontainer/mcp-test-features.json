{
  "name": "MCP Test Runner",
  "description": "Features for running MCP tests in Codespaces",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "python.defaultInterpreterPath": "/workspace/venv/bin/python"
      }
    },
    "codespaces": {
      "repositories": {
        "anthropics/claude-cli": {
          "permissions": "read"
        }
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup-mcp-tests.sh",
  "forwardPorts": [8088, 5008, 5432, 6379],
  "portsAttributes": {
    "8088": {
      "label": "Superset",
      "onAutoForward": "notify"
    },
    "5008": {
      "label": "MCP Service",
      "onAutoForward": "silent"
    }
  }
}
