{
  "compilerOptions": {
    // syntax rules
    "strict": true,

    "moduleResolution": "node",

    // environment
    "target": "es6",
    "lib": ["DOM", "ESNext"],
    "module": "esnext",

    // output
    "outDir": "./dist",
    "emitDeclarationOnly": true,
    "declaration": true
  },

  "include": [
    "src/**/*"
  ],

  "exclude": [
    "tests",
    "dist",
    "lib",
    "node_modules"
  ]
}
